<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.wuwo.fangdaidemo.MainActivity">
    <com.wuwo.fangdaidemo.view.MyTitleBarLayout
        android:fitsSystemWindows="true"
        android:id="@+id/id_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/id_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorLines"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/id_main_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="@color/colorTabText"
        app:tabSelectedTextColor="@color/colorTabTextSelect"
        ></android.support.design.widget.TabLayout>

</LinearLayout>
